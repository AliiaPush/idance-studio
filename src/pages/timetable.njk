---
pagination:
  data: collections.register
  size: 1
  alias: timetable
permalink: "class-timetable/index.html"
---
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jockey+One&family=Kaisei+HarunoUmi:wght@500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="shortcut icon" href="../assets/images/favicon.svg" type="icon">
    <link rel="stylesheet" href="../assets/styles/style.css">
    <script src="https://kit.fontawesome.com/4e769e3898.js" crossorigin="anonymous"></script>
    <script type="module" src="../assets/js/main.js" defer></script>
    <title>Idance Studio | Timetable</title>
</head>

<body id="body">

    <div id="spinner" class="spinner-container">
        <div class="spinner"></div>
    </div>
    <!-- navbar  -->
    {% set background = "true" %}
    {% include "../_includes/nav.njk" %}
    <!-- navbar  -->
    <!-- alert -->
    <div id="alert" class="alert">
        <!-- success  -->
        <div id="alert-success" class="alert-text-box">
            <i class="fa-regular fa-circle-check alert-text-icon"></i>
            <p data-alert-text="success" class="alert-text">This is a sample alert</p>
        </div>
        <!-- success -->
        <!-- error  -->
        <div id="alert-error" class="alert-text-box">
            <i class="fa-regular fa-circle-xmark alert-text-icon"></i>
            <p data-alert-text="error" class="alert-text">This is a sample alert</p>
        </div>
        <!-- error -->
        <button id="alert-close-btn" class="alert-close-btn">
            <i class="fa-solid fa-xmark alert-close-icon"></i>
        </button>
    </div>
    <!-- alert  -->
    <!-- main  -->
    <main data-main-section="class-timetable" id="class-timetable" class="class-timetable container">
        <!-- page topic  -->
        <div class="page-topic-container">
            <h3 data-key-text="timetable.title" class="page-topic">
                {% for item1 in collections.navigations %}{{ item1.data.timetable.en }}{% endfor %}
            </h3>
        </div>
        <!-- page topic  -->
        {% for item in collections.timetable | sortByDay %}
            <!-- table  -->
        <div class="table-container">
            <h3 data-key-text="timetable.data.{{ item.data.dayNo }}.title" class="table-date">
                {{ item.data.title.en }}
            </h3>
            <h4 data-key-text="timetable.data.{{ item.data.dayNo }}.address" class="table-address">
                {{ item.data.location.en }}
            </h4>
            <table class="table">
                <thead class="table-head">
                    <tr class="table-row">
                        <td class="table-data">
                            <div class="table-data-container">
                                <p data-key-text="timetable.time" data-lang="en" class="table-data-description">
                                    {% for item1 in collections.navigations %}{{ item1.data.time.en }}{% endfor %}
                                </p>
                            </div>
                        </td>
                        <td class="table-data">
                            <div class="table-data-container">
                                <p data-key-text="timetable.description" class="table-data-description">
                                    {% for item1 in collections.navigations %}{{ item1.data.description.en }}{% endfor %}
                                </p>
                            </div>
                        </td>
                        <!-- <td class="table-data">
                            <div class="table-data-container">
                                <p data-key-text="timetable.head.location" class="table-data-description">Location</p>
                            </div>
                        </td> -->
                    </tr>
                </thead>
                <tbody class="table-body">
                    {% for class in item.data.classes %}
                    <!-- row  -->
                    <tr class="table-row">
                        <td class="table-data">
                            <p class="table-data-description" data-key-text="timetable.data.{{ item.data.dayNo }}.rows.{{ loop.index0 }}.time">
                                {{ class.time }}
                            </p>
                        </td>
                        <td class="table-data">
                            <p data-key-text="timetable.data.{{ item.data.dayNo }}.rows.{{ loop.index0 }}.description" class="table-data-description">
                                {{ class.description }}
                            </p>
                        </td>
                    </tr>
                    <!-- row  -->
                    {% endfor %}
                </tbody>

            </table>
        </div>
        <!-- table  -->
        {% endfor %}
    </main>
    <!-- main  -->
    <!-- footer  -->
    {% include "../_includes/footer.njk" %}
    <!-- footer  -->
</body>

</html>