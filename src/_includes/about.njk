<!-- goals  -->
<section data-main-section="goals" id="goals" class="our-goals container">
  <!-- page topic  -->
  <div class="page-topic-container">
    <h3 class="page-topic" data-key-text="about.title">
      {% for item1 in collections.navigations %}{{ item1.data.aboutUs.en }}{% endfor %}
    </h3>
  </div>
  <!-- page topic  -->
  {% for item in collections.about %}
  <!-- goal reverse  -->
  <div data-lazy-load class="goal {% if item.data.reverse %}goal-reverse{% endif %}">
    <div class="goal-img-container">
      <!-- ----------------------------------------------------------------------- -->
      <!--                src="./assets/images/goals/your-image-name.format"       -->
      <!-- ----------------------------------------------------------------------- -->
      <img data-goal-img src="./assets/images/goals/{{ item.data.image }}" alt="{{ item.data.topic.en }}" class="goal-img" />
    </div>
    <div class="goal-content-container">
      <h4
        data-goal-title
        class="goal-content-topic {% if item.data.reverse %}goal-content-topic-reverse{% endif %}"
        data-key-text="about.data.{{ loop.index0 }}.title"
      >
        {{ item.data.topic.en }}
      </h4>
      <span data-goal-description class="goal-content-description {% if item.data.reverse %}goal-content-description-reverse{% endif %}" data-key-text="about.data.{{ loop.index0 }}.content">
        {{ item.data.description.en | markdownify | safe }}
      </span>
    </div>
  </div>
  <!-- goal reverse  -->
  {% endfor %}
</section>
<!-- goals  -->
